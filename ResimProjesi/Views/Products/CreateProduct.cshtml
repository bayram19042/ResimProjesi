@model AddProduct
@{
    ViewData["Title"] = "CreateProduct";
}



<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">

            <form class="mt-3" asp-action="CreateProduct" asp-controller="Products" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger" ></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Description"></label>
                    <input class="form-control" asp-for="@Model.Description">
                    <span asp-validation-for="Description"class="text-danger" ></span>
                </div>


                <div class="form-group">
                    <label asp-for="@Model.Price"></label>
                    <input class="form-control" asp-for="@Model.Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="@Model.Dosyalar"></label>
                    <input class="form-control" asp-for="@Model.Dosyalar" multiple type="file">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

        </div>
        <div class="col-md-6"></div>
    </div>
</div>



